<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ExamenProgresoDosEmilioGuerrero.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ExamenProgresoDosEmilioGuerrero"
    Shell.FlyoutBehavior="Disabled"
    Title="ExamenProgresoDosEmilioGuerrero">

    <TabBar>
        <Tab>
            <ShellContent
            Title="Recarga Telefonica"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage"
                Icon="https://images.vexels.com/content/205069/preview/telephone-handset-blue-icon-8bf147.png"/>
            
            <ShellContent
            Title="Nombre"
            ContentTemplate="{DataTemplate local:GridPage}"
            Route="MainPage"
                Icon="https://cdn-icons-png.flaticon.com/512/456/456212.png"/>
        </Tab>
    </TabBar>

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="Nombre"
        ContentTemplate="{DataTemplate local:GridPage}"
        Route="MainPage"
        Icon="https://cdn-icons-png.flaticon.com/512/456/456212.png"/>

</Shell>
